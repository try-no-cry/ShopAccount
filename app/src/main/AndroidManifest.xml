<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.om.shopaccount">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shopping_basket_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity
            android:name=".Alert_window"
            android:configChanges="orientation|screenSize" />
        <!-- android:theme="@style/AppTheme.Custom"/> -->

        <activity
            android:name=".SignUp"
            android:configChanges="orientation|screenSize"></activity>
        <activity
            android:name=".Login"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".selectShopkeeper"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".selectCustomer"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".DeleteProduct"></activity>
    </application>

</manifest>